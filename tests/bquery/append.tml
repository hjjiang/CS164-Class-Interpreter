<VBox background="#DDE5FF">
  <HBox klass="header" fontSize="14px" fontWeight="bold">
    BQuery test.
  </HBox>
  <HBox>
    <HBox klass="myclass" fract="45" 
          background="lightblue"
          onclick="self.fract=self.fract+(101-self.fract)/2">
      Click here to grow
    </HBox>
    <HBox fract="55" onclick="bq('myclass'):background('green')" background="yellow" klass="fontclass">
      Click here to change color of other nodes
    </HBox>
    <HBox fract="25" onclick="bq('fontclass'):font('10'):background('moccasin')" background="white" klass="myclass">
      Click to shrink font
    </HBox>
    <HBox fract="25" onclick="bq('myclass'):append('<HBox>some text</HBox>')" background="white" klass="anotherclass">
      Click to add text.
    </HBox>
  </HBox>
  <HBox>
    CS164 - Fall 2010 -
    <Link ref="./tests/bquery/test1.tml" klass="myclass">
      (Refresh)
    </Link>
  </HBox>
</VBox>
